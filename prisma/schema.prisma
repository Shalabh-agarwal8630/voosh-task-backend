datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  createdAt DateTime  @default(now())
  sessions  Session[]
}

model Session {
  id        Int       @id @default(autoincrement())
  sessionId String    @unique
  userId    Int?
  user      User?     @relation(fields: [userId], references: [id])
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id        Int       @id @default(autoincrement())
  role      String    
  content   String
  sessionId Int
  session   Session   @relation(fields: [sessionId], references: [id])
  createdAt DateTime  @default(now())
}

model NewsArticle {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  url       String?
  createdAt DateTime  @default(now())
}
